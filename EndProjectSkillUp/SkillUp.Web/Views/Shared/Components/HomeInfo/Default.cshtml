@model Dictionary<string,string>

<div class="hero_banner image-cover image_bottom h7_bg">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="simple-search-wrap text-left">
                    <div class="hero_search-2">
                        <div class="elsio_tag yellow">@Model["BannerName"]</div>
                        <h1 class="banner_title mb-4">@Model["BannerSubTitle"]<br><span class="light">@Model["BannerSecondTitle"]</span></h1>
                        <p class="font-lg mb-4">@Model["BannerDescription"]</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="side_block extream_img">
                    <div class="list_crs_img">
                        <img src="~/user/assets/img/ic-1.png" class="img-fluid cirl animate-fl-y" alt="" />
                        <img src="~/user/assets/img/ic-2.png" class="img-fluid arrow animate-fl-x" alt="" />
                        <img src="~/user/assets/img/ic-3.png" class="img-fluid moon animate-fl-x" alt="" />
                    </div>
                    <img src="~/user/assets/img/side-2.png" class="img-fluid" alt="" />
                </div>
            </div>
        </div>
    </div>
</div>


<section class="p-0">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="crp_box fl_color ovr_top">
                    <div class="row align-items-center">
                        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
                            <div class="dro_140">
                                <div class="dro_141"><i class="fa fa-journal-whills"></i></div>
                                <div class="dro_142">
                                    <h6>200+ Cources</h6>
                                    <p>@Model["MainInfo1"]</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
                            <div class="dro_140">
                                <div class="dro_141 st-1"><i class="fa fa-business-time"></i></div>
                                <div class="dro_142">
                                    <h6>Lifetime Access</h6>
                                    <p>@Model["MainInfo2"]</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
                            <div class="dro_140">
                                <div class="dro_141 st-3"><i class="fa fa-user-shield"></i></div>
                                <div class="dro_142">
                                    <h6>800k+ Enrolled</h6>
                                    <p>@Model["MainInfo3"]</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

<section>
    <div class="container">

        <div class="row justify-content-center">
            <div class="col-lg-7 col-md-8">
                <div class="sec-heading center">
                    <h2>How It <span class="theme-cl">Works?</span></h2>
                    <p>@Model["HowITWorks"]</p>
                </div>
            </div>
        </div>

        <div class="row justify-content-center mt-5">

            <div class="col-lg-4 col-md-4 col-sm-6">
                <div class="wrk_grid">
                    <div class="wrk_grid_ico">
                        <i class="fa fa-search-location"></i>
                    </div>
                    <div class="wrk_caption">
                        <h4>Find Cources</h4>
                        <p>@Model["FindCourses"]</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-4 col-sm-6">
                <div class="wrk_grid active">
                    <div class="wrk_grid_ico">
                        <i class="fa fa-calendar-week"></i>
                    </div>
                    <div class="wrk_caption">
                        <h4>Watch Course Lecture</h4>
                        <p>@Model["Watch Course Lecture"]</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-4 col-sm-6">
                <div class="wrk_grid">
                    <div class="wrk_grid_ico">
                        <i class="fa fa-award"></i>
                    </div>
                    <div class="wrk_caption">
                        <h4>Get Certificate</h4>
                        <p>@Model["Get Certificate"]</p>
                    </div>
                </div>
            </div>

        </div>

    </div>
</section>
<div class="clearfix"></div>
