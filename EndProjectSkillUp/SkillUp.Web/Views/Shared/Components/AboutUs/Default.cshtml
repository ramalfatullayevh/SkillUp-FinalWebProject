@model Dictionary<string, string>
<section>
    <div class="container">
        <div class="row align-items-center justify-content-between">
            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                <div class="lmp_caption">
                    <span class="theme-cl">About Us</span>
                    <h2 class="mb-3">@Model["AboutTitle"]</h2>
                    <p>@Model["AboutDescription"]</p>
                    <div class="mb-3 mr-4 ml-lg-0 mr-lg-4">
                        <div class="d-flex align-items-center">
                            <div class="rounded-circle bg-light-success theme-cl p-2 small d-flex align-items-center justify-content-center">
                                <i class="fas fa-check"></i>
                            </div>
                            <h6 class="mb-0 ml-3">@Model["Advantage1"]</h6>
                        </div>
                    </div>
                    <div class="mb-3 mr-4 ml-lg-0 mr-lg-4">
                        <div class="d-flex align-items-center">
                            <div class="rounded-circle bg-light-success theme-cl p-2 small d-flex align-items-center justify-content-center">
                                <i class="fas fa-check"></i>
                            </div>
                            <h6 class="mb-0 ml-3">@Model["Advantage2"]</h6>
                        </div>
                    </div>
                    <div class="mb-3 mr-4 ml-lg-0 mr-lg-4">
                        <div class="d-flex align-items-center">
                            <div class="rounded-circle bg-light-success theme-cl p-2 small d-flex align-items-center justify-content-center">
                                <i class="fas fa-check"></i>
                            </div>
                            <h6 class="mb-0 ml-3">@Model["Advantage3"]</h6>
                        </div>
                    </div>
                    <div class="mb-3 mr-4 ml-lg-0 mr-lg-4">
                        <div class="d-flex align-items-center">
                            <div class="rounded-circle bg-light-success theme-cl p-2 small d-flex align-items-center justify-content-center">
                                <i class="fas fa-check"></i>
                            </div>
                            <h6 class="mb-0 ml-3">@Model["Advantage4"]</h6>
                        </div>
                    </div>
                    <div class="text-left mt-4"><a asp-controller="course" asp-action="findcourses" class="btn btn-md text-light theme-bg">Enrolled Today</a></div>
                </div>
            </div>

            <div class="col-xl-5 col-lg-5 col-md-12 col-sm-12">
                <div class="lmp_thumb">
                    <img src="@Model["AboutImageUrl"]" class="img-fluid" alt="" />
                </div>
            </div>
        </div>
    </div>
</section>