
@{
    ViewData["Title"] = "EnrollCourse";
}

@model EnrollStudentVM
<div class="row justify-content-between">
    <div class="col-lg-12 col-md-12 col-sm-12 pb-4">
        <div class="dashboard_wrap d-flex align-items-center justify-content-between">
            <div class="arion">
                <nav class="transparent">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-action="index" asp-controller="dashboard">Go To Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Enroll Course for Student</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12">
        <div class="dashboard_wrap">
            <div asp-validation-summary="ModelOnly" class="text-center text-danger"> </div>
                <form method="post">
                <div class="row justify-content-center">
                    <div class="col-xl-8 col-lg-10 col-md-12">

                        <div class="form-group smalls">
                            <label asp-for="AppUserId">Choose Student</label>
                            <select asp-for="AppUserId" asp-items="@ViewBag.AppUsers" id="crss" class="form-control"></select>
                        </div>
                        <div class="form-group smalls">
                            <label asp-for="CourseId">Choose Course</label>
                            <select asp-for="CourseId" asp-items="@ViewBag.Courses" id="crss" class="form-control"></select>
                        </div>

                        <div class="form-group smalls">
                            <button type="submit" class="btn theme-bg text-white">Enroll Student</button>
                        </div>

                    </div>
                </div>
            </form>
    </div>
</div>

</div>
</div>
</div>
</section>
