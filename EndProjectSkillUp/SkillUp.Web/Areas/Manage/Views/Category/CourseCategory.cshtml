
@{
    ViewData["Title"] = "CourseCategory";
}

@model ICollection<Category>

<div class="row justify-content-between">
    <div class="col-lg-12 col-md-12 col-sm-12 pb-4">
        <div class="dashboard_wrap d-flex align-items-center justify-content-between">
            <div class="arion">
                <nav class="transparent">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a  asp-controller="dashboard" asp-action="index">Go To Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Course Category</li>
                    </ol>
                </nav>
            </div>
            <div class="elkios">
                <a asp-area="manage" asp-controller="category" asp-action="AddNewCategory" class="add_new_btn" data-target="#catModal"><i class="fas fa-plus-circle mr-1"></i>Add New Category</a><br /><br />
                <a asp-area="manage" asp-controller="category" asp-action="AddNewSubcategory" class="add_new_btn" data-target="#catModal"><i class="fas fa-plus-circle mr-1"></i>Add New Sub Category  </a>

            </div>
        </div>
    </div>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12">
            <div class="dash_crs_cat">
                <a asp-area="Manage" asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.Id" class="remove_tools"><i class="fas fa-trash-alt"></i></a>
                <div class="dash_crs_cat_caption">
                    <div class="dash_crs_cat_head">
                        <h4>@item.Name</h4>
                        <span>@item.SubCategories.Count Sub Category</span>
                    </div>
                    <div class="dash_crs_cat_body">
                        <ul>
                            @foreach (var subCategory in item.SubCategories)
                            {
                                <li><span>@subCategory.Name</span></li>

                            }
                        </ul>
                    </div>
                    <div class="dash_crs_cat_bottom">
                        <a asp-area="Manage" asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.Id" class="btn full-width theme-bg-light theme-cl">Edit Category</a>
                    </div>
                </div>
            </div>
        </div>

    }


</div>

</div>

</div>

</div>
</section>

