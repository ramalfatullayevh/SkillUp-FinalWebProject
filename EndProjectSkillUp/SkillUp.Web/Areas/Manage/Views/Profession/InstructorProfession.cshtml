
@{
    ViewData["Title"] = "InstructorProfession";
}

@model ICollection<Profession>

<div class="row justify-content-between">
    <div class="col-lg-12 col-md-12 col-sm-12 pb-4">
        <div class="dashboard_wrap d-flex align-items-center justify-content-between">
            <div class="arion">
                <nav class="transparent">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a  asp-controller="dashboard" asp-action="index">Go To Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Instructor Profession</li>
                    </ol>
                </nav>
            </div>
            <div class="elkios">
                <a asp-area="manage" asp-controller="profession" asp-action="addnewprofession" class="add_new_btn" data-target="#catModal"><i class="fas fa-plus-circle mr-1"></i>Add New Profession</a><br /><br />
            </div>
        </div>
    </div>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12">
            <div class="dash_crs_cat">
                <a asp-area="manage" asp-controller="profession" asp-action="deleteprofession" asp-route-id="@item.Id" class="remove_tools"><i class="fas fa-trash-alt"></i></a>
                <div class="dash_crs_cat_caption">
                    <div class="dash_crs_cat_head">
                        <h4>@item.Name</h4>
                    </div>
                    <div class="dash_crs_cat_bottom">
                        <a asp-area="manage" asp-controller="profession" asp-action="updateprofession" asp-route-id="@item.Id" class="btn full-width theme-bg-light theme-cl">Edit Profession</a>
                    </div>
                </div>
            </div>
        </div>

    }


</div>

</div>

</div>

</div>
</section>
