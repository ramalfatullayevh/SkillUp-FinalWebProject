@{
    ViewData["Title"] = "Index";
}
@model ICollection<ContactUs>
<div class="row justify-content-between">
    <div class="col-lg-12 col-md-12 col-sm-12 pb-4">
        <div class="dashboard_wrap d-flex align-items-center justify-content-between">
            <div class="arion">
                <nav class="transparent">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="dashboard" asp-action="index">Go To Dahboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">All Messages</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 mb-2">
        <div class="table-responsive">
            <table class="table dash_list">
                <thead>
                    <tr class="breadcrumb">
                        <th scope="col">Name</th>
                        <th scope="col">Surname</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Message</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var contact in Model)
                    {
                        <tr class="breadcrumb">
                            <td><h6>@contact.Name</h6></td>
                            <td><h6>@contact.Surname</h6></td>
                            <td><h6>@contact.Email</h6></td>
                            <td><h6>@contact.PhoneNumber</h6></td>
                            <td>@contact.Message</td>
                            <td>
                                <div class="dropdown show">
                                    <a class="btn btn-action" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fas fa-ellipsis-h"></i>
                                    </a>
                                    <div class="drp-select dropdown-menu">
                                        @if (contact.IsRead == false)
                                        {
                                            <a class="dropdown-item" asp-area="manage" asp-controller="message" asp-action="readmessage" asp-route-id="@contact.Id">Read</a>
                                        }
                                        <a class="dropdown-item" asp-area="manage" asp-controller="message" asp-action="DeleteMessage" asp-route-id="@contact.Id">Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>

                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
            </div>
        </div>
    </div>
</div>

</div>
</div>
</div>
</section>
