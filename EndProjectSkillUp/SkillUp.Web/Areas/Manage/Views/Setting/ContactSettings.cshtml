@{
    ViewData["Title"] = "SystemSettings";
}

@model Dictionary<string,string>
<div class="row justify-content-between">
    <div class="col-lg-12 col-md-12 col-sm-12 pb-4">
        <div class="dashboard_wrap d-flex align-items-center justify-content-between">
            <div class="arion">
                <nav class="transparent">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-area="manage" asp-controller="dashboard" asp-action="index">Go To Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Contacts Settings</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12">
        <div class="dashboard_wrap">

            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 mb-4">
                    <h6 class="m-0">Contacts Settings</h6>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-xl-12 col-lg-12 col-md-12">
                    <form method="post"> 
                        <div class="form-group smalls">
                            <label>Adress*</label>
                            <textarea asp-for="@Model["Adress"]" type="text" class="form-control"></textarea>
                            <span asp-validation-for="@Model["Adress"]" class="text-danger"></span>
                        </div>
                        <div class="form-group smalls">
                            <label>Mail*</label>
                            <textarea asp-for="@Model["Mail"]" type="text" class="form-control" ></textarea>
                            <span asp-validation-for="@Model["Mail"]" class="text-danger"></span>
                        </div>
                        <div class="form-group smalls">
                            <label>Phone Number*</label>
                            <textarea asp-for="@Model["PhoneNumber"]" type="text" class="form-control" ></textarea>
                            <span asp-validation-for="@Model["PhoneNumber"]" class="text-danger"></span>
                        </div>
                        <div class="form-group smalls">
                            <button class="btn theme-bg text-white" type="submit">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>


</div>

</div>

</div>
</section>
