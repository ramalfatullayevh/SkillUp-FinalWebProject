
@{
    ViewData["Title"] = "AboutSetting";
}

@model Dictionary<string,string>

<div class="row justify-content-between">
    <div class="col-lg-12 col-md-12 col-sm-12 pb-4">
        <div class="dashboard_wrap d-flex align-items-center justify-content-between">
            <div class="arion">
                <nav class="transparent">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="dashboard" asp-action="index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">AboutUs Settings</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12">
        <div class="dashboard_wrap">

            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 mb-4">
                    <h6 class="m-0">AboutUs Settings</h6>
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-xl-12 col-lg-12 col-md-12">
                    <form method="post" >
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="form-group smalls">
                            <label>About Title</label>
                            <textarea asp-for="@Model["AboutTitle"]" type="text" class="form-control" ></textarea>
                            <span asp-validation-for="@Model["AboutTitle"]" class="text-danger"></span>
                        </div>
                        <div class="form-group smalls">
                            <label>About Description*</label>
                            <textarea asp-for="@Model["AboutDescription"]" type="text" class="form-control"></textarea>
                            <span asp-validation-for="@Model["AboutDescription"]" class="text-danger"></span>
                        </div>
                        <div class="form-group smalls">
                            <img src="@Model["AboutImageUrl"]" width="250px" /><br />
                            <label>About Image*</label>
                            <textarea asp-for="@Model["AboutImageUrl"]" type="text" class="form-control"></textarea>
                            <span asp-validation-for="@Model["AboutImageUrl"]" class="text-danger"></span>
                        </div>
                        <div class="form-group smalls">
                            <label>Website Advantage - 1</label>
                            <textarea asp-for="@Model["Advantage1"]" type="text" class="form-control" ></textarea>
                            <span asp-validation-for="@Model["Advantage1"]" class="text-danger"></span>
                        </div>
                        <div class="form-group smalls">
                            <label>Website Advantage - 2</label>
                            <textarea asp-for="@Model["Advantage2"]" type="text" class="form-control" ></textarea>
                            <span asp-validation-for="@Model["Advantage2"]" class="text-danger"></span>
                        </div>
                        <div class="form-group smalls">
                            <label>Website Advantage - 3</label>
                            <textarea asp-for="@Model["Advantage3"]" type="text" class="form-control" ></textarea>
                            <span asp-validation-for="@Model["Advantage3"]" class="text-danger"></span>
                        </div>
                        <div class="form-group smalls">
                            <label>Website Advantage - 4</label>
                            <textarea asp-for="@Model["Advantage4"]" type="text" class="form-control" ></textarea>
                            <span asp-validation-for="@Model["Advantage4"]" class="text-danger"></span>
                        </div>
                        <div class="form-group smalls">
                            <button class="btn theme-bg text-white" type="submit">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>
</div>
</section>

