<!DOCTYPE html>
<html lang="zxx">
<head>
    <meta charset="utf-8" />
    <meta name="author" content="Ramal" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SkillUp - Online Learning Platform</title>

    <link href="~/user/assets/css/styles.css" rel="stylesheet">
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">

</head>

<body>

    @await Component.InvokeAsync("AdminInfo")
                        @RenderBody()
                        <section class="theme-bg call_action_wrap-wrap">
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-12">

                                        <div class="call_action_wrap">
                                            <div class="call_action_wrap-head">
                                                <h3>Do You Have Questions ?</h3>
                                                <span>We'll help you to grow your career and growth.</span>
                                            </div>
                                            <a asp-controller="Home" asp-action="Contact" class="btn btn-call_action_wrap">Contact Us Today</a>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </section>
                        <footer class="dark-footer skin-dark-footer style-2">
                            <div class="footer-middle">
                                <div class="container">
                                    <div class="row">

                                        <div class="col-lg-5 col-md-5">
                                            <div class="footer_widget">
                                                <img src="~/user/assets/img/logo-light.png" class="img-footer  mb-5" width="300" alt="" />
                                            </div>
                                        </div>

                                        <div class="col-lg-6 col-md-7 ml-auto">
                                            <div class="row">

                                                <div class="col-lg-4 col-md-4">
                                                    <div class="footer_widget">
                                                        <h4 class="widget_title">Pages</h4>
                                                        <ul class="footer-menu">
                                                            <li><a asp-area="default" asp-controller="home" asp-action="index">Home</a></li>
                                        <li><a asp-area="default" asp-controller="home" asp-action="hbout">About Us</a></li>
                                        <li><a asp-area="default" asp-controller="home" asp-action="fAQs">Faq's</a></li>
                                        <li><a asp-area="default" asp-controller="home" asp-action="contact">Contact US</a></li>
                                                        </ul>
                                                    </div>
                                                </div>

                                                <div class="col-lg-4 col-md-4">
                                                    <div class="footer_widget">
                                                        <h4 class="widget_title">Course</h4>
                                                        <ul class="footer-menu">
                                        <li><a asp-area="default" asp-controller="category" asp-action="index">Explore Category</a></li>
                                        <li><a asp-area="default" asp-controller="course" asp-action="findCourses">Courses</a></li>
                                        <li><a asp-area="default" asp-controller="instructor" asp-action="findCourses">Instructors</a></li>
                                                        </ul>
                                                    </div>
                                                </div>

                                                <div class="col-lg-4 col-md-4">
                                                    <div class="footer_widget">
                                                        <h4 class="widget_title">Shop</h4>
                                                        <ul class="footer-menu">
                                        <li><a asp-area="default" asp-controller="shop" asp-action="products">Products</a></li>
                                                        </ul>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="footer-bottom">
                                <div class="container">
                                    <div class="row align-items-center">
                                        <div class="col-lg-12 col-md-12 text-center">
                                            <p class="mb-0">© 2023 SkillUp. Developed By <a href="#">Ramal</a>.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </footer>
                        <a id="back2Top" class="top-scroll" title="Back to top" href="#"><i class="ti-arrow-up"></i></a>
                    </div>

                    <script src="~/user/assets/js/jquery.min.js"></script>
                    <script src="~/user/assets/js/popper.min.js"></script>
                    <script src="~/user/assets/js/bootstrap.min.js"></script>
                    <script src="~/user/assets/js/select2.min.js"></script>
                    <script src="~/user/assets/js/slick.js"></script>
                    <script src="~/user/assets/js/moment.min.js"></script>
                    <script src="~/user/assets/js/daterangepicker.js"></script>
                    <script src="~/user/assets/js/summernote.min.js"></script>
                    <script src="~/user/assets/js/metisMenu.min.js"></script>
                    <script src="~/user/assets/js/custom.js"></script>

                    <script src="~/user/assets/js/raphael.min.js"></script>
                    <script src="~/user/assets/js/morris.min.js"></script>

                    <script src="~/user/assets/js/morris.js"></script>

</body>
</html>
